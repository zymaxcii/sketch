//---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
//                                                                                      VARIABLES
//---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
long myTime = 0;                                          //variable to store the delay
                                                          //long type variable holds value between -2,147,483,648 to 2,147,483,647

//---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
//                                                                                        SETUP
//---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
void setup() {

randomSeed(analogRead(0));                                //seed the random num generator with value on analog pin 0 (floating between 0 & 1023)
pinMode(7,OUTPUT);                                        //beeper attached to digital pin 7, set as an output
}


//---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
//                                                                                      MAIN LOOP
//---------------------------------------------------------------------------------------------------------------------------------------------------------------------------------------
void loop() {

myTime = random(60000,21600000);                          //generate a random delay time with a minimum of a 1 minute & maximum of 6 hours
delay(myTime);                                            //wait the random amount of time
digitalWrite(7,HIGH);                                     //activate beeper
delay(50);                                                //wait 50 miliseconds
digitalWrite(7,LOW);                                      //deactivate beeper

}
